<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:strokeWidth="2dp"
        app:rippleColor="@color/colorPrimary"
        android:clickable="true"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/colorAccent"
        android:layout_margin="10dp"
        android:focusable="true">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/listitem_recycler_view_fragment_profile_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorAccent" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/arash"/>
            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:text="Name"
                    android:layout_height="wrap_content"
                    android:id="@+id/listitem_recycler_view_fragment_name"
                    android:maxLines="1"
                    style="@style/app_theme.text.title"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/listitem_recycler_view_fragment_profile_image"
                    app:layout_constraintEnd_toStartOf="@+id/listitem_recycler_view_fragment_profile_image"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"/>
            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="LastMessage"
                    android:id="@+id/listitem_recycler_view_fragment_last_message"
                    android:maxLines="1"
                    style="@style/app_theme.text.subtitle"
                    app:layout_constraintBottom_toBottomOf="@+id/listitem_recycler_view_fragment_profile_image"
                    app:layout_constraintEnd_toStartOf="@+id/listitem_recycler_view_fragment_profile_image"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>